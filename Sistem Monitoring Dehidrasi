<script>
function simulasi() {
  let gsr = Math.floor(Math.random() * 600) + 200;
  document.getElementById("gsr").innerText = gsr;
  let status = "Normal";
  if (gsr < 350) status = "Dehidrasi Ringan";
  if (gsr < 250) status = "Dehidrasi Berat";
  document.getElementById("status").innerText = status;
}
</script>

